<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vBox" xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;" stylesheets="@../style/style.css" prefWidth="350" prefHeight="350">
    <Label text="EVENT" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-padding: 10 80; -fx-background-color: #FFBB00" />
    <Label fx:id="eventLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" wrapText="true" textAlignment="CENTER"/>
    <Label fx:id="availableLabel" text="Available:" />
    <HBox spacing="5" alignment="CENTER">
        <Label text="Quantity:" />
        <TextField fx:id="quantityField" />
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="updateButton" text="Update" />
        <Button fx:id="cancelButton" text="Cancel" />
    </HBox>
</VBox>
