<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            prefWidth="400" prefHeight="550"
            style="-fx-padding: 20;">
    <VBox spacing="12" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Label text="Add New Event" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="titleField" promptText="Title"/>
        <TextField fx:id="locationField" promptText="Location"/>
        <ComboBox fx:id="dayCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <TextField fx:id="priceField" promptText="Price"/>
        <TextField fx:id="totalTicketsField" promptText="Total Tickets"/>
        <TextField fx:id="soldTicketsField" promptText="Sold Tickets (optional, default 0)"/>

        <CheckBox fx:id="enabledCheckBox" text="Enabled by default" selected="true"/>

        <Label fx:id="errorLabel" textFill="red" wrapText="true"/>

        <HBox spacing="10">
            <Button fx:id="addEvent" text="Add Event" defaultButton="true"/>
            <Button fx:id="cancel" text="Cancel"/>
        </HBox>
    </VBox>
</AnchorPane>

