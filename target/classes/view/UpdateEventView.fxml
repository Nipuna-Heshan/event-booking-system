<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vBox" alignment="TOP_CENTER" spacing="15" style="-fx-padding: 30 10" xmlns:fx="http://javafx.com/fxml" stylesheets="@../style/style.css">
    <Label text="Update Event Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 20 0;" prefWidth="400" alignment="CENTER"/>
    <Label fx:id="title"  style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 20 0;" prefWidth="400" alignment="CENTER"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints prefWidth="200" />
        </columnConstraints>

        <Label text="Location:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="locationField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Day:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="dayCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Price:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Total Tickets:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="totalTicketsField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 20 0;">
        <Button fx:id="updateBtn" text="Update" prefWidth="100"/>
        <Button fx:id="cancelBtn" text="Cancel" prefWidth="100"/>
    </HBox>
</VBox>

